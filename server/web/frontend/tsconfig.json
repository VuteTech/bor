{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "target": "ES2017",
    "jsx": "react-jsx",
    "module": "ES2020",
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": "src"
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules"]
}
